    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug gwyf-helper",
            "cargo": {
                "args": [
                    "build",
                    "--bin=gwyf-helper",
                    "--package=gwyf-helper"
                ],
                "filter": {
                    "name": "gwyf-helper",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Attach to gwyf",
            "type": "lldb",
            "request": "attach",
            "program": "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Golf With Your Friends\\Golf With Your Friends.exe"
        }
    ],
    "compounds": [
        {
            "name": "Run/Attach",
            "configurations": [
                "Debug gwyf-helper",
                "Attach to gwyf"
            ]
        }
    ]
}
